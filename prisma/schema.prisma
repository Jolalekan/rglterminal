generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id         String        @id @default(cuid())
  email      String        @unique
  password   String

  // Admin replies to messages
  messages   Message[]     @relation("AdminMessages")

  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model Conversation {
  id         String        @id @default(cuid())
  slug       String        @unique

  messages   Message[]

  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model Message {
  id             String       @id @default(cuid())

  // Guest fields
  name           String
  email          String
  phone          String?

  body           String

  // Admin reply fields
  senderId       String?      
  sender         Admin?        @relation("AdminMessages", fields: [senderId], references: [id])

  // Conversation link
  conversationId String
  conversation   Conversation  @relation(fields: [conversationId], references: [id])

  type           Type          @default(generalEnquiry)
  status         Status        @default(New)

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

enum Status {
  New
  Read
  Responded
}

enum Type {
  groupage
  generalEnquiry
  ContainerClearing
  ShipItems
  Haulage
  Export
}
