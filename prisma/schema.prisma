generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id         String        @id @default(cuid())
  email      String        @unique
  password   String

  // Admin replies
  quoteRequests   QuoteRequest[]  @relation("AdminQuoteRequests")
  contactReplies  Contact[]       @relation("AdminContactReplies")

  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model Conversation {
  id         String        @id @default(cuid())
  slug       String        @unique

  quoteRequests   QuoteRequest[]

  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model QuoteRequest {
  id             String       @id @default(cuid())

  // Guest fields
  fullName       String
  email          String
  phone          String?
  company        String?

  // Logistics-specific fields
  body           String
  serviceType    Type          @default(ShipItems)
  

  palletCount    Int?
  storageDuration String?     
  specialRequirements String?   

  // Admin reply fields
  senderId       String?      
  sender         Admin?        @relation("AdminQuoteRequests", fields: [senderId], references: [id])
  adminNotes     String?       // Internal notes
  quotedAmount   Decimal?      @db.Decimal(10, 2)

  // Conversation link
  conversationId String
  conversation   Conversation  @relation(fields: [conversationId], references: [id])

  status         Status        @default(New)

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  respondedAt    DateTime?     // Track when admin responded
}

model Contact {
  id             String       @id @default(cuid())
  firstName      String
  surname        String
  email          String       // ADDED - Critical!
  phone          String
  message        String       @db.Text 

  // Admin response tracking
  senderId       String?      
  sender         Admin?        @relation("AdminContactReplies", fields: [senderId], references: [id])
  adminNotes     String?       @db.Text

  status         Status       @default(New)

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  respondedAt    DateTime?
}

enum Status {
  New
  Read
  Responded
  Closed      
}

enum Type {
  Export
  ShipItems
  BondedWarehousing
  ContainerStorage
  MaritimeShipping
  Groupage      
  GeneralEnquiry  
  Haulage
}

