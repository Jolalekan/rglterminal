generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id         String        @id @default(cuid())
  email      String        @unique
  password   String

  quoteRequests   QuoteRequest[]  @relation("AdminQuoteRequests")
  contactReplies  Contact[]       @relation("AdminContactReplies")

  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}


model QuoteRequest {
  id             String       @id @default(cuid())
  
  fullName       String
  email          String
  phone          String?
  company        String?
  body           String
  
  serviceType    Type         @default(GeneralEnquiry)
  status         Status       @default(New)
  

  conversationId String?
  conversation   Conversation? @relation(fields: [conversationId], references: [id])

  palletCount    Int?
  storageDuration String?     
  specialRequirements String?   
  
  senderId       String?
  sender         Admin?       @relation("AdminQuoteRequests", fields: [senderId], references: [id])
  adminNotes     String?       // Internal notes
  quotedAmount   Decimal?      @db.Decimal(10, 2)
  // Link to conversation
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  respondedAt    DateTime?
}

model Contact {
  id             String       @id @default(cuid())
  firstName      String
  surname        String
  email          String
  phone          String
  message        String       @db.Text
  status         Status       @default(New)
  
  // Link to conversation
  conversationId String?
  conversation   Conversation? @relation(fields: [conversationId], references: [id])
  
  senderId       String?
  sender         Admin?       @relation("AdminContactReplies", fields: [senderId], references: [id])
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  respondedAt    DateTime?
}

model Conversation {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  slug          String        @unique
  
  // Relations
  messages      Message[]
  quoteRequests QuoteRequest[]  // Link quote requests
  contacts      Contact[]       // Link contacts
  
  lastMessageAt DateTime       @default(now())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  direction      String       // "inbound" or "outbound"
  from           String
  to             String
  subject        String?
  body           String       @db.Text
  htmlBody       String?      @db.Text
  emailId        String?
  
  isRead         Boolean      @default(false) // Add this!
  
  createdAt      DateTime     @default(now())
  
  @@index([conversationId])
  @@index([direction, isRead]) // Index for faster queries
}

